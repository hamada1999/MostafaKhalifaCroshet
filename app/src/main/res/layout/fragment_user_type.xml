<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.UserTypeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/signUp_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up as: "
                android:textColor="@color/design_default_color_primary_variant"
                android:fontFamily="@font/poppins_bold"
                android:textAlignment="center"
                android:layout_margin="20dp"
                android:textSize="50sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dbeceb"
                android:padding="15dp"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@+id/signUp_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Which describe you?"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="30sp"
                    android:textColor="@color/black" />

            <RadioButton
                    android:id="@+id/customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CUSTOMER"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="25sp"
                    android:textColor="@color/teal_200"
                    />

            <RadioButton
                    android:id="@+id/artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARTIST"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="25sp"
                    android:textColor="@color/teal_200"
                    />

            <RadioButton
                    android:id="@+id/moderator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MODERATOR"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="25sp"
                    android:textColor="@color/teal_200" />

            <RadioButton
                    android:id="@+id/admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADMIN"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="25sp"
                    android:textColor="@color/teal_200" />
        </RadioGroup>

        <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:layout_margin="20dp"
                android:background="@drawable/round_bg3"
                android:backgroundTint="@color/black"
                android:elevation="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radio_group"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>