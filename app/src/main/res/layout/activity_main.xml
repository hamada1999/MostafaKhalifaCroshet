<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    <io.ak1.BubbleTabBar
            android:id="@+id/bubbleTabBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="50dp"
            android:padding="7dp"
            android:background="@drawable/round_bg2"
            android:backgroundTint="@color/white"
            android:layout_margin="20dp"
            app:bubbletab_menuResource="@menu/bottom_bar_menu"
            app:bubbletab_custom_font="@font/poppins_medium"
            app:bubbletab_disabled_icon_color="@color/grey"
            app:bubbletab_horizontal_padding="20dp"
            app:bubbletab_icon_size="24dp"
            app:bubbletab_title_size="16sp"
            app:bubbletab_icon_padding="5sp"
            app:bubbletab_vertical_padding="10dp"
            app:bubbletab_tab_corner_radius="25dp"
            app:layout_constraintBottom_toBottomOf="parent">
    </io.ak1.BubbleTabBar>


</androidx.constraintlayout.widget.ConstraintLayout>